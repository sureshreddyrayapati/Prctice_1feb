@model IEnumerable<Prctice_1feb.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<h4 class="bg-warning text-success">@TempData["tempmsg"]</h4>
<h4> @ViewBag.meg</h4>
<h4>Number of employees are @ViewBag.noEmo</h4>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Eid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EDesignation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Esal)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Eid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EDesignation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Esal)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Eid}) |
            @Html.ActionLink("Details", "Details", new { id = item.Eid }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Eid })
        </td>
    </tr>
}

</table>
